{
  "compilerOptions": {
    "lib": ["esnext"],
    "outDir": "./build",
    "allowJs": true,
    "target": "esnext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"]
}
